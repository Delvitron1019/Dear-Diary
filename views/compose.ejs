
<%- include("partials/header") %> 

<h3>Compose</h3>

<form action="/compose" method="post" class="row mb-3">

    <div class="form-group">

        <div>
            
            <label for="blogTitle">Title</label>
            <input type="text" name="blogTitle" style="width: 100%;" class="form-control">
            
        </div>

    </div>

    <div class="form-group">

        <div>
            
            <label for="blogContent">Post</label>
            <textarea name="blogContent" id="" cols="30" rows="5" class="form-control"></textarea>
            
        </div>

    </div>

    <button type="submit" class="btn btn-primary" >Publish</button>

</form>

