
<%- include("partials/header") %> 

<h2> Home </h2>

<p> <%= homeStartingContent %> </p>

<% for( let i of posts ){ %>
    <div>

        <h2> <%= i.title %> </h2>

        <% if( i.content.length<=100 ){ %>

            <p> <%= i.content %>  <a href="/blogs/<%= i.title %>" style="color: blue;">Read More</a> </p>

        <% }else{ %>

            <p> <%= i.content.substring(0, 100) + "... " %> <a href="/blogs/<%= i.title %>" style="color: blue;">Read More</a> </p>

        <% } %>

    </div>
<% } %>

<%- include("partials/footer") %> 